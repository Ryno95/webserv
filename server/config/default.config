mime_config		config/default.mime
buffer_size		4096

server
{
	port	8080

	host
	{
		name				Webserv
		root				root/pages
		accepted_methods	GET
		autoindex			true
		default_index		index.html
		default_error		Default.html

		error_page			404		NotFound.html
		error_page			400		BadRequest.html
		error_root			root/error_pages/

		location /cgi-bin/*
		{
			route_type			cgi
			root				root
			accepted_methods	POST
		}

		location /images/*
		{
			root	root/data/
		}

		location /uploads/*
		{
			accepted_methods	POST DELETE
			allow_upload		true
			root				root/data/
		}
	}

	host
	{
		name				google
		root				root
		accepted_methods	GET

		location /googlesearch/*
		{
			route_type	redirect
			root		www.google.com
		}
	}
}

server
{
	port	8081

	host
	{
		accepted_methods	GET
		name				Webserv
		root				root/user_system/pages/
		default_index		login.html

		location */scripts/*.py
		{
			route_type			cgi
			root				root/user_system
			accepted_methods	POST
		}
	}
}
